<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            tools:context=".LauchActivity$PlaceholderFragment">


        <TextView
                android:id="@+id/hello_tv"
                android:text="@string/hello_coffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/welcom_msg_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#FFC0CB"
                android:text="let's do code"/>

        <Button
                android:id="@+id/auto_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="easy auto"
                />

        <Button
                android:id="@+id/butterknife_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="butter knife ex"
                />

        <Button
                android:id="@+id/favor_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="favor heart"
                />

        <Button
                android:id="@+id/screenlock_btn"
                android:text="ScreenLock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

        <Button
                android:id="@+id/framell_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="FrameLayout"/>

        <Button
                android:id="@+id/circle_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="circle"/>

        <Button
                android:id="@+id/expand_lv_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="expand_lv_btn"
                />

        <Button
                android:id="@+id/webview_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="webview"
                />

        <Button
                android:id="@+id/softkeyboard_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="softkeyboard"/>

        <Button
                android:id="@+id/panel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="panel"
                android:textSize="18sp"
                />

        <Button
                android:id="@+id/triple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="triple"/>

        <Button
                android:id="@+id/horizontal_sv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="horizontal sv"/>

        <Button
                android:id="@+id/fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fragment"/>

        <Button
                android:id="@+id/actionbar_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="actionbar base"/>

        <Button
                android:id="@+id/drag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="drag down"/>

        <Button
                android:id="@+id/widget_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pull to refresh"
                />

        <Button
                android:id="@+id/widget_box1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="widget box1"
                />

        <Button
                android:id="@+id/switch_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="switch layout"
                />

        <Button
                android:id="@+id/drag_gridview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="drag gridview"
                />

        <Button
                android:id="@+id/material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="material"
                />

        <Button
                android:id="@+id/material_drawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="material drawer"
                />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="style ab"
                android:onClick="onStyleABClick"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="blurImage"
                android:onClick="onBlurImageClick"/>


        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gauss blur"
                android:onClick="onGaussBlurClick"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="morse"
                android:onClick="onMorseClick"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="spinner"
                android:onClick="onSpinnerClick"/>

        <Button
                android:id="@+id/otherapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="otherApp"
                android:onClick="onOtherAppClick"
                />

    </LinearLayout>

</ScrollView>

