<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/Violet"
        >

    <com.one.widget.BubbleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:padding="20dp"
            android:src="@drawable/house_main"
            app:bubble_angle="8dp"
            app:bubble_arrowHeight="12dp"
            app:bubble_arrowLocation="right"
            app:bubble_arrowOffset="-6dp"
            app:bubble_arrowTop="64dp"
            app:bubble_arrowWidth="18dp"
            />

</LinearLayout>