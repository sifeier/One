<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/share_btn_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="图片，快分享我吧，还等什么"
        android:onClick="onShareImageClick"
        />

    <Button
        android:id="@+id/share_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_btn_image"
        android:layout_centerHorizontal="true"
        android:text="文本，快分享我吧，还等什么"
        android:onClick="onShareTxtClick"
        />

    <Button
        android:id="@+id/share_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_txt"
        android:layout_centerHorizontal="true"
        android:text="contact"
        android:onClick="onContactClick"
        />

</RelativeLayout>